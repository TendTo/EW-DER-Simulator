{
  "name": "simulator",
  "version": "1.0.0",
  "description": "IoT simulator using Energy Web's testnet Volta",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "postbuild": "parcel build ./public/index.html --dist-dir dist/frontend --public-url ./",
    "watch": "parcel watch ./public/index.html --dist-dir dist/frontend --public-url ./",
    "prestart": "npm run build",
    "start": "electron ./dist/backend/main.js",
    "package": "electron-builder --linux"
  },
  "author": {
    "name": "TendTo",
    "email": "casablancaernesto@gmail.com",
    "url": "https://github.com/TendTo"
  },
  "license": "ISC",
  "devDependencies": {
    "chart.js": "^3.8.0",
    "electron": "^19.0.8",
    "parcel": "^2.6.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "bip39": "^3.0.4",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^5.6.9",
    "log4js": "^6.6.0"
  },
  "build": {
    "productName": "EW IoT Simulator",
    "appId": "com.tendto.iotsimulator",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "electronVersion": "19.0.8",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release/build",
      "buildResources": "resources"
    },
    "publish": null
  }
}
