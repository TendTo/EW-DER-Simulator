{
  "name": "simulator",
  "version": "1.0.0",
  "main": "dist/backend/main.js",
  "description": "IoT simulator using Energy Web's testnet Volta",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "postbuild": "parcel build ./public/index.html --dist-dir dist/frontend --public-url ./",
    "watch": "parcel watch ./public/index.html --dist-dir dist/frontend --public-url ./",
    "prestart": "npm run build",
    "start": "electron .",
    "package": "npm exec electron-packager --overwrite --icon=public/icons/icon.ico ."
  },
  "author": {
    "name": "TendTo",
    "email": "casablancaernesto@gmail.com",
    "url": "https://github.com/TendTo"
  },
  "license": "ISC",
  "devDependencies": {
    "chart.js": "^3.8.0",
    "electron": "^19.0.8",
    "electron-packager": "^15.5.1",
    "parcel": "^2.6.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "bip39": "^3.0.4",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^5.6.9",
    "log4js": "^6.6.0"
  },
  "productName": "EW IoT Simulator"
}